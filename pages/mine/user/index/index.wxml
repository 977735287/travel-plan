<scroll-view scroll-y class="scrollPage">
  <cu-custom bgImage="https://ss2.bdstatic.com/70cFvnSh_Q1YnxGkpoWK1HF6hhy/it/u=3098043245,3200747665&fm=26&gp=0.jpg" isBack="{{true}}">
    <view class='title-content' slot="content">
      <text decode="{{true}}">个&nbsp;&nbsp;人&nbsp;&nbsp;信&nbsp;&nbsp;息</text>
    </view>
  </cu-custom>
  <view class='container'>
    <form>
      <view class="cu-form-group">
        <view class="title">头像</view>
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      </view>
      <view class="cu-form-group">
        <view class="title">昵称</view>
        <view class="text-grey">{{userInfo.nickName}}</view>
      </view>
      <view class="cu-form-group">
        <view class="title">性别</view>
        <view class="text-grey">{{userInfo.gender == 1 ? '男':'女'}}</view>
      </view>
      <view class="cu-form-group">
        <view class="title">地区</view>
        <view class="text-grey">{{userInfo.country}},{{userInfo.province}},{{userInfo.city}}</view>
      </view>
      <view class="cu-form-group">
        <view class="title">语言</view>
        <view class="text-grey">{{userInfo.language == 'zh_CN' ? '中文':'英文'}}</view>
      </view>
      <view class="cu-form-group">
        <view class="title">手机号</view>
        <view class="text-grey" bindtap='bindEditPhone'>{{userInfo.phone}}
          <text class="cuIcon-right"></text>
        </view>
      </view>
      <view class="cu-form-group">
        <view class="title">邮箱</view>
        <view class="text-grey" bindtap='bindEditEmail'>{{userInfo.email}}
          <text class="cuIcon-right"></text>
        </view>
      </view>
    </form>
